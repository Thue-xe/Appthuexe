<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    tools:context=".ResetPasswordFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Đặt lại mật khẩu"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập mã OTP (6 số) đã được gửi đến SĐT của bạn và tạo mật khẩu mới."
        android:textAlignment="center"
        android:textSize="16sp"/>

    <!-- 1. EditText cho OTP (ID: edResetOtp) -->
    <EditText
        android:id="@+id/edResetOtp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:hint="Nhập mã OTP"
        android:inputType="number"
        android:maxLength="6"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:textSize="18sp"/>

    <!-- 2. EditText cho Mật khẩu mới (ID: edNewPass) -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edNewPass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_edittext"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:padding="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 3. EditText cho Nhập lại Mật khẩu (ID: edConfirmNewPass) -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edConfirmNewPass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_edittext"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:padding="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 4. Nút Xác nhận (ID: btnConfirmReset) -->
    <Button
        android:id="@+id/btnConfirmReset"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Xác nhận"
        android:backgroundTint="#8BC34A"
        app:cornerRadius="16dp"
        android:textSize="18sp"/>

</LinearLayout>

