<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!-- Nút Back -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@android:color/transparent"
        app:tint="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Step Bar -->
    <LinearLayout
        android:id="@+id/stepper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Warning -->
    <LinearLayout
        android:id="@+id/warningBlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFF5E5"
        android:padding="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/stepper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#FFA726"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bạn vui lòng cung cấp Cà vẹt / Giấy đăng ký xe để xác minh."
            android:textColor="#000000"
            android:textSize="13sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/titleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cà vẹt / Giấy đăng ký xe"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/warningBlock"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Upload Box -->
    <LinearLayout
        android:id="@+id/uploadBox"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:background="#F3F3F3"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/titleSmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgDocument"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/camera"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chụp hoặc chọn ảnh"
            android:textColor="#888"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <!-- Nút tiếp theo -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Tiếp theo"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#4CAF50"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
